@model EntityLayer.Concrete.Rezervasyon
@{
    Layout = "MemberLayout";
}




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Rezervasyon</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web sitemiz Traversal üzerinde yeni rezervasyon işlemini aşağıdan gerçekleştirebilirsiniz.</p>
                    <form method="post">
                        <div class="form-group">
                            @Html.Label("Lokasyon")
                            @Html.DropDownListFor(x => x.VarisNoktasiID, (List<SelectListItem>)ViewBag.l, new { @class = "form-control" })
                            @Html.Label("Kişi Sayısı")
                            <input type="text" asp-for="KisiSayisi" class="form-control" />
                            @Html.Label("Tarih")
                            <input type="date" asp-for="RezervasyonTarihi" class="form-control" />
                            @Html.Label("Varsa Eklemek İstedikleriniz")
                            <textarea class="form-control" asp-for="Aciklama"></textarea>
                        </div>
                        <button class="btn btn-primary">Rezervasyon Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







@if (TempData["Rezervasyonbasarili"] != null)
{
    <script>
        Swal.fire({
            title: 'Başarılı',
            text: '@Html.Raw(TempData["Rezervasyonbasarili"])',
            icon: 'success',
            confirmButtonText: 'Tamam'
        });
    </script>
}