@model List<GetAllGuideQueryResult>
@{
    Layout = "AdminLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">CQRS</h4>
    <div class="card">
        <h5 class="card-header">MediatR İle CQRS</h5>
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Rehber Adı</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
                @foreach(var x in Model)
                {
                    <tr>
                        <th>@x.RehberID</th>
                        <td>@x.Ad</td>
                        <td>@x.Aciklama</td>
                        <td><a href="#" class="btn btn-outline-danger">Rehber Sil</a></td>
                        <td><a href="/Admin/RehberlerMediatR/RehberGetir/@x.RehberID/" class="btn btn-outline-warning">Rehber Güncelle</a></td>
                    </tr>
                }
            </table>
        </div>
        <br />
        <a href="/Admin/RehberlerMediatR/RehberEkle/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>
    </div>
</div>