@model List<AppRole>
@{
    Layout = "AdminLayout";
}
@{
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Rol İşlemleri</h4>
    <div class="card">
        <h5 class="card-header">Rol Listesi</h5>
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>Rolü Sil</th>
                    <th>Rolü Güncelle</th>
                </tr>
                @if(Model.Count>0)
                {
                    @foreach (var x in Model)
                    {
                        count++;
                        <tr>
                            <th>@count</th>
                            <td>@x.Name</td>
                            <td><a href="/Admin/Rol/RolSil/@x.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Rol/RolGuncelle/@x.Id" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="alert alert-warning">
                        <td colspan="4" class="text-center" style="vertical-align: middle; height: 35px;">
                            <i class="fas fa-info-circle mr-2"></i> HERHANGİ BİR ROL BULUNAMADI
                        </td>
                    </tr>
                }
            </table>
        </div>
        <br />
        <a href="/Admin/Rol/RolEkle/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
    </div>
</div>