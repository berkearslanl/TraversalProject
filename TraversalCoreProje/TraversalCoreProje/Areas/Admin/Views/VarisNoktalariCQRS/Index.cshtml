@model List<GetAllDestinationQueryResult>
@{
    Layout = "AdminLayout";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">CQRS</h4>
    <div class="card">
        <h5 class="card-header">Tur Verileri</h5>
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Gün - Gece</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
                @foreach (var x in Model)
                {
                    <tr>
                        <th>@x.id</th>
                        <td>@x.Sehir</td>
                        <td>@x.GeceGunduz</td>
                        <td>@x.Fiyat $</td>
                        <td>@x.Kapasite</td>
                        <td><a href="/Admin/VarisNoktalariCQRS/DeleteDestination/@x.id/" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/VarisNoktalariCQRS/GetDestination/@x.id/" class="btn btn-outline-warning">Güncelle</a></td>
                    </tr>
                }
            </table>
        </div>
        <br />
        <a href="/Admin/VarisNoktalariCQRS/AddDestination/" class="btn btn-outline-secondary">Yeni Rota Ekle</a>
    </div>
</div>