@model List<Rehberler>

@{
    Layout = "_MainLayout";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Rehberler</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rehberlerimiz </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center mb-lg-3 mb-4">
                <h6 class="sub-title">Ekip Arkadaşlarımız</h6>
                <h3 class="hny-title">Rehberlerimizle Tanışın!</h3>
            </div>
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-lg-3 col-6 mt-lg-5 mt-4">
                        <div class="box16">
                            <a href="#url"><img src="@x.Resim" alt="" class="img-fluid" style="width:100%;height:350px;object-fit:cover;border-radius:10px" /></a>
                            <div class="box-content">
                                <h3 class="title"><a href="#url">@x.Ad</a></h3>
                                <span class="post">@x.Aciklama</span>
                                <ul class="social">
                                    <li>
                                        <a href="#" class="facebook">
                                            <span class="fa fa-facebook-f"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="twitter">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>