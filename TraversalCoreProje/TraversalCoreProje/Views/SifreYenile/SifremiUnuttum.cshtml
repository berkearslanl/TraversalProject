@model SifremiUnuttumViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifre Yenileme | Traversal Core</title>
    <link rel="stylesheet" href="~/css/forget-password.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 100%;
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        .login-card {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .card-header h2 {
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .card-header p {
            color: #777;
            font-size: 0.9rem;
            margin-bottom: 30px;
        }

        .form-group {
            text-align: left;
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-size: 0.85rem;
                margin-bottom: 8px;
                color: #555;
                font-weight: 500;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #eee;
            border-radius: 8px;
            outline: none;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #764ba2;
                box-shadow: 0 0 8px rgba(118, 75, 162, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background: #764ba2;
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .btn-submit:hover {
                background: #5a387e;
            }

        .card-footer {
            margin-top: 20px;
        }

            .card-footer a {
                color: #764ba2;
                text-decoration: none;
                font-size: 0.85rem;
                transition: color 0.3s ease;
            }

                .card-footer a:hover {
                    color: #333;
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <div class="card-header">
                <h2>Şifre Yenileme</h2>
                <p>E-posta adresinizi girerek şifre sıfırlama linkini alabilirsiniz.</p>
            </div>

            <form method="post">
                <div class="form-group">
                    <label>Mail Adresinizi Giriniz</label>
                    <input type="email" class="form-control" asp-for="Mail" placeholder="örnek@mail.com" required />
                </div>

                <button type="submit" class="btn-submit">Şifre Yenileme Linki Gönder</button>
            </form>

            <div class="card-footer">
                <a href="/Login/GirisYap/">Giriş Sayfasına Dön</a>
            </div>
        </div>
    </div>

</body>
</html>

<script>
    function showSuccessAndRedirect() {
        let timerInterval;
        Swal.fire({
            title: 'Bağlantı Gönderildi!',
            html: 'Şifre sıfırlama linki mail adresinize iletildi. <br> <b>5</b> saniye içinde giriş sayfasına yönlendiriliyorsunuz.',
            timer: 5000,
            timerProgressBar: true,
            icon: 'success',
            didOpen: () => {
                Swal.showLoading();
                const b = Swal.getHtmlContainer().querySelector('b');
                timerInterval = setInterval(() => {
                    b.textContent = Math.ceil(Swal.getTimerLeft() / 1000);
                }, 100);
            },
            willClose: () => {
                clearInterval(timerInterval);
            }
        }).then((result) => {
            window.location.href = '/Login/GirisYap/';
        });
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        // En güvenli yöntem: Sayfa yüklendiği an fonksiyonu çağır
        document.addEventListener("DOMContentLoaded", function() {
            showSuccessAndRedirect();
        });
    </script>
}