@using EntityLayer.Concrete
@model List<Referanslar>
<section class="w3l-clients" id="clients">
    <div class="cusrtomer-layout py-5">
        <div class="container py-lg-4 py-md-3 pb-lg-0">
            <div class="heading text-center mx-auto">
                <h6 class="sub-title text-center">Düşünceleriniz bizim için çok kıymetli</h6>
                <h3 class="hny-title mb-md-5 mb-4">Kullanıcılar bizim hakkımızda neler söylüyorlar ?</h3>
            </div>
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-two owl-carousel owl-theme">
                    @foreach(var x in Model)
                    {
                        <div class="item">
                            <div class="testimonial-content">
                                <div class="testimonial">
                                    <blockquote>
                                        <span class="fa fa-quote-left" aria-hidden="true"></span>
                                        @x.Yorum
                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="@x.Resim" class="img-fluid" alt="client-img">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@x.Kullanici</h3>
                                            <p class="indentity">Example City</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    


                </div>
            </div>
        </div>
    </div>
</section>


