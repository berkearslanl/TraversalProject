@using EntityLayer.Concrete
@model List<Yorumlar>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (@ViewBag.yorumSayisi)</h4>
    @foreach (var x in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
               <img src="@x.AppUser.ResimUrl" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@x.AppUser.Ad  @x.AppUser.Soyad</a>
                        @x.Tarih.ToString("dd MMMM yyyy")

                    </li>
                </ul>
                <p>
                    @x.Yorum
                </p>
            </div>
        </div>
    }
</div>