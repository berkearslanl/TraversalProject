@model List<VarisNoktalari>
<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Son Rotalar</h6>
            <p class="text-sm">Traversal Şirketinin En Son Eklenen Sehahat Rotaları</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="@x.Resim" style="object-fit:cover;width:100%;height:180px" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">@x.GeceGunduz - @x.Fiyat $</p>
                                <a href="javascript:;">
                                    <h5>
                                        @x.Sehir
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @x.DetayAciklama1.Substring(0,55)...
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <button type="button" class="btn btn-outline-primary btn-sm mb-0"><a href="/Rotalar/turDetay/@x.VarisNoktasiID/">Detayı Görüntüle</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>