@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Yorum Yapın</h4>
        <p class="mb-4">
            İşaretli alanları doldurmanız gerekmektedir *
        </p>
        <form method="post" asp-action="YorumEkle" asp-controller="Yorumlar">
            <input type="hidden" name="VarisNoktasiID" value="@ViewBag.i" />
            <input type="hidden" name="AppUserId" value="@ViewBag.userId" />
            <input type="hidden" name="KullaniciAdi" value="@ViewBag.kadi" />
            <div class="form-group">
                <textarea name="Yorum"  class="form-control" placeholder="Yorumunuz*" required=""
                spellcheck="false"></textarea>
            </div>
            <div class="submit text-right">
                <button class="btn btn-style btn-primary">Yorum Yap </button>
            </div>
        </form>
    </div>
}
else
{
    <h2>Yorum yapabilmek için giriş yapmanız gerekmektedir!</h2>
}
